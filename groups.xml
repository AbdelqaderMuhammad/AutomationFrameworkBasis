<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression in grouping">
    <parameter name="browser" value="chrome"/>
    <test name="groups">

        <groups>
            <run>
                <include name="windows.*"/>
                <exclude name="testing feature x" />
            </run>
        </groups>
        <classes>
            <class name="tests.groupsTest" />
        </classes>

    </test>
</suite>